<!-- views/edit-ticket.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le ticket</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-red-500 to-green-500 flex justify-center items-center min-h-screen">
    <div class="bg-gradient-to-bl from-teal-300 to-amber-300 p-8 rounded-lg shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold text-center mb-6">Modifier le ticket</h1>
        
        <form action="/issue/update/<%= ticket._id %>" method="POST" class="space-y-6">
            <div>
                <label for="auteur" class="block text-lg font-medium text-gray-900">
                    Nom :
                </label>
                <input type="text" 
                       id="auteur" 
                       name="auteur" 
                       value="<%= ticket.auteur %>"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       required>
            </div>
            
            <div>
                <label for="titre" class="block text-lg font-medium text-gray-900">
                    Titre :
                </label>
                <input type="text" 
                       id="titre" 
                       name="titre" 
                       value="<%= ticket.titre %>"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       required>
            </div>
            
            <div>
                <label for="description" class="block text-lg font-medium text-gray-900">
                    Description :
                </label>
                <textarea name="description" 
                          id="description" 
                          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                          required><%= ticket.description %></textarea>
            </div>
            
            <div>
                <label for="etat" class="block text-lg font-medium text-gray-900">
                    État :
                </label>
                <select name="etat" 
                        id="etat" 
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        required>
                    <option value="En-Cours" <%= ticket.etat === 'En-Cours' ? 'selected' : '' %>>En Cours</option>
                    <option value="Resolu" <%= ticket.etat === 'Resolu' ? 'selected' : '' %>>Résolu</option>
                </select>
            </div>
            
            <div class="flex justify-between space-x-4">
                <button type="submit"
                        class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    Mettre à jour
                </button>
                <a href="/" 
                   class="w-full bg-gray-500 text-white text-center font-bold py-2 px-4 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</body>
</html>